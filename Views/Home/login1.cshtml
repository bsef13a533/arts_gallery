@model ArtGallary.Models.Art.Account

	<!--start-breadcrumbs-->
	<div class="breadcrumbs">
		<div class="container">
			<div class="breadcrumbs-main">
				<ol class="breadcrumb">
					<li><a href="/Home/index">Home</a></li>
					<li class="active">Login</li>
				</ol>
			</div>
		</div>
	</div>
	<!--end-breadcrumbs-->
	<!--register-starts-->
	<div class="register">
		<div class="container">
			<div class="register-top heading">
				<h2>Login</h2>
			</div>
			<div class="register-main">
                    @using(Html.BeginForm( "login1", "Home", FormMethod.Post, new { id="LoginForm" })){
                    @Html.LabelFor(Model=>Model.email)<br />
					@Html.TextBoxFor(Model=>Model.email, null, new { @style = "width: 300px;margin:20px;height:50px" ,placeholder="e.g. abc@yahoo.com",id="email",required="required",name="email"})
                    <br />
                    @Html.LabelFor(Model=>Model.password)<br />
                    @Html.TextBoxFor(Model=>Model.password,null,  new { @style = "width: 300px;height:50px;margin:20px" ,type = "password", placeholder="Password",required="required",id="password",name="password"})
                    <br />			
				    
                        <div class="address submit">
                        <input type="submit" value="Submit" style="margin-left:7px;margin-right:20px;margin-top:20px;margin-bottom:20px" ><span>@Html.ActionLink("Forgot Password", "ForgetPassword", "Home", new { @style="margin:20px;color:cornflowerblue;onmouseover:'color=black'",id="flink"})</span>
					</div>
    }
                <br />
                @Html.ActionLink("Login as Admin", "adminlog", "Admin", null,new { @style = "margin:20px;color:cornflowerblue;float:left;onmouseover:'color=black'", id = "adminlog" })
				<div class="col-md-6 account-left">
					
				</div>
				<div class="clearfix"></div>
			</div>
		</div>
	</div>
	<!--register-end-->
	