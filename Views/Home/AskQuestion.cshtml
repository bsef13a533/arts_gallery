@model ArtGallary.Models.Art.Account

@{
    ViewBag.Title = "AskQuestion";
}



	<!--start-breadcrumbs-->
	<div class="breadcrumbs">
		<div class="container">
			<div class="breadcrumbs-main">
				<ol class="breadcrumb">
					<li><a href="/Home/index">Home</a></li>
					<li><a href="/Home/login1">Login</a></li>
                    <li><a href="/Home/ForgetPassword">Forget Password</a></li>
                    <li class="active">AskQuestion</li>
				</ol>
			</div>
		</div>
	</div>
	<!--end-breadcrumbs-->
	<!--register-starts-->
	<div class="register">
		<div class="container">
			<div class="register-top heading">
				<h2>REGISTER</h2>
			</div>
			<div class="register-main">
				<div class="col-md-6 account-left">
                    
                    @{
                        IEnumerable<SelectListItem> selectList = new SelectList(new List<Object>{ 
                        "What is your aunt name?" ,
                       "What is you favourite food?" 
                       ,"Which place you would love to visit?"});
                       }
                    <script>
                        $(document).ready(function () {
                            $("#pic").change(function(){
                                var input = document.getElementById("pic");
                                var file = input.value.split("\\");
                                var fileName = file[file.length-1];
                                $("#photo").text(fileName);});
                        });
                        $(document).ready(function () {
                            $("#email").change(function () {
                                var e = $("#email").val();
                                $.getJSON("/Home/CheckEmail?email=" + e, function (data) {
                                    if (data)
                                        $("#isexist").text("Email already exists!");
                                    else
                                        $("#isexist").text("");
                                });
                            });
                        });
                    </script>
                        
                    @using (Html.BeginForm("AskQuestion", "Home", FormMethod.Post, new { id = "LoginForm", enctype = "multipart/form-data" }))
                    {
                     @Html.LabelFor(Model=>Model.secretquestion)<br/>   
                     @Html.Label((string)ViewBag.Question)<br />
                     @Html.TextBoxFor(Model=>Model.secretanswer,null,  new { @style = "width: 300px;height:50px;margin:20px;text=null" ,type = "text", name="secretanswer1" })				
                   @Html.ValidationMessageFor(Model=>Model.secretanswer)
                    <div class="address submit">                        
						<input type="submit" value="Submit" style="margin-left:7px;margin-right:20px;margin-top:20px;margin-bottom:20px" >
					</div>
                    }                 
       
				</div>
				
				<div class="clearfix"></div>
			</div>
			
		</div>
	</div>
	<!--register-end-->
	