@model ArtGallary.Models.Art.Account
@{
    ViewBag.Title = "ForgetPassword";
}
	<!--start-breadcrumbs-->
	<div class="breadcrumbs">
		<div class="container">
			<div class="breadcrumbs-main">
				<ol class="breadcrumb">
					<li><a href="/Home/index">Home</a></li>
					<li><a href="/Home/login1">Login</a></li>
                    <li class="active">Forget Password</li>
				</ol>
			</div>
		</div>
	</div>
	<!--end-breadcrumbs-->
	<!--register-starts-->
	<div class="register">
		<div class="container">
			<div class="register-top heading">
				<h2>Forgot Password</h2>
			</div>
			<div class="register-main">
                    @using (Html.BeginForm("ForgetPassword", "Home",  FormMethod.Post, new { id = "LoginForm" }))
                    {
                        @Html.LabelFor(Model=>Model.email)<br/>
					@Html.TextBoxFor(Model=>Model.email, null, new { @style = "width: 300px;margin:20px;height:50px" ,type = "email",placeholder="e.g. abc@yahoo.com",required="required",id="email"})
                   
                        <div class="address submit">
                        <input type="submit" value="Submit" style="margin-left:7px;margin-right:20px;margin-top:20px;margin-bottom:20px">
					</div>
    }
				<div class="col-md-6 account-left">
					
				</div>
				<div class="clearfix"></div>
			</div>
			
							
						
		</div>
	</div>
	<!--register-end-->
	